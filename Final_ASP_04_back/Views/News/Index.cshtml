@model IEnumerable<Final_ASP_04_back.Models.EFModels.News>

@{
    ViewBag.Title = "維護最新消息";
    var id = new List<int>(); ;
}

<h1>維護最新消息</h1>

<p>
    @Html.ActionLink("新增最新消息", "Create", null, new { @class = "NewsCreateBtn" })
</p>


<div class="container m-3">
    <div class="row">
        <div class="col-md-3">
            <select class="branchName">
                <option value="0">請選擇分店</option>
                @{
                    foreach (var item in Model)
                    {
                        if (!id.Contains(@item.Branch.Id))
                        {
                            <option value="@item.Branch.Id">@item.Branch.Name</option>
                            id.Add(@item.Branch.Id);
                        }
                    }
                }
            </select>
        </div>
    </div>
</div>

<table class="table table-striped table-bordered" style="border: 5px solid #B3D9D9; ">
    <tr>
        <th>
            分店店名
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="news" data-id="@item.BranchId">
            <td>
                @Html.DisplayFor(modelItem => item.Branch.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedTime)
            </td>
            <td style=" white-space: nowrap;">
                @Html.ActionLink("編輯", "Edit", new { id = item.Id }, new { @class = "NewsEditBtn mb-2" })
                <br>
                @Html.ActionLink("刪除", "Delete", new { id = item.Id }, new { @class = "NewsDeleteBtn" })
            </td>
        </tr>
    }

</table>

@section css{
    <style>
        .NewsCreateBtn {
            text-align: center;
            width: 100%;
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            background-color: lightskyblue;
            color: #ffffff;
            border: none;
            text-decoration: none;
            border-radius: 10px
        }

        .NewsEditBtn {
            text-align: center;
            width: 100px;
            display: inline-block;
            font-size: 16px;
            background-color: deepskyblue;
            color: #ffffff;
            border: none;
            text-decoration: none;
            border-radius: 10px
        }

        .NewsDeleteBtn {
            text-align: center;
            width: 100px;
            display: inline-block;
            font-size: 16px;
            background-color: lightcoral;
            color: #ffffff;
            border: none;
            text-decoration: none;
            border-radius: 10px
        }

        h1 {
            text-align: center;
            color: #587D87;
        }
    </style>
}


@section scripts{
    <script>
        $(document).ready(function () {
            $(".branchName").change(function () {
                let val = $(this).val();
                let news = $(".news");
                if (val == 0) {
                    news.show();
                } else {
                    news.hide();
                    news.filter('[data-id="' + val + '"]').show();
                }
            })
        })

    </script>
}