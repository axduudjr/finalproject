@model Final_ASP_04_back.Models.EFModels.Order

@{
    ViewBag.Title = "編輯訂單狀態";
}

<h2>編輯訂單狀態</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="container">
            <div class="row">
                <div class=" col-md-8" id="btn1">
                    <div class="mb-3 text-center">
                        <input type="submit" name="submitButton" value="確認顧客已入住" class="btn btn-primary editorder" id="editorder" style="width:100%;padding:15px" />
                    </div>
                </div>
                <div class="col-md-4" id="btn2">
                    <div class="mb-3 text-center">
                        <input type="submit" name="submitButton" value="顧客來電取消訂單" class="btn btn-danger cancelorder" id="cancelorder" style="width: 100%; padding: 15px" />
                    </div>
                </div>
                <div class="col-md-12" id="btn3">
                    <div class="mb-3 text-center">
                        @Html.ActionLink("回到訂單清單", "Index", null, new { @class = "BackBtn" })
                    </div>
                </div>
            </div>
        </div>

    </div>
}

<div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@section css{
    <style>
        .BackBtn {
            text-align: center;
            width: 100%;
            padding: 10px;
            display: inline-block;
            font-size: 16px;
            background-color: darkgray;
            color: #ffffff;
            border: none;
            text-decoration: none;
            border-radius: 10px
        }

            .BackBtn:hover {
                color: white;
            }
    </style>
}
