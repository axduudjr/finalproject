@model IEnumerable<Final_ASP_04_back.Models.ViewModels.FaqVM>

@{
    ViewBag.Title = "維護FAQs";
}

<h1>維護FAQs</h1>

<p>
    @Html.ActionLink("新增FAQ", "Create", null, new { @class = "FAQCreateBtn" })
</p>
<table class="table table-striped table-bordered" style="border: 5px solid #B3D9D9; ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer)
        </th>
        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer)
            </td>
            <td style=" white-space: nowrap;">
                @Html.ActionLink("編輯", "Edit", new { id = item.Id }, new { @class = "FAQEditBtn mb-2" })
                <br />
                @Html.ActionLink("刪除", "Delete", new { id = item.Id }, new { @class = "FAQDeleteBtn" })
            </td>

        </tr>
    }

</table>

@section css{
    <style>
        .FAQCreateBtn {
            text-align: center;
            width: 100%;
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            background-color: lightskyblue;
            color: #ffffff;
            border: none;
            text-decoration: none;
            border-radius: 10px
        }

        .FAQEditBtn {
            text-align: center;
            width: 100px;
            display: inline-block;
            font-size: 16px;
            background-color: deepskyblue;
            color: #ffffff;
            border: none;
            text-decoration: none;
            border-radius: 10px
        }

        .FAQDeleteBtn {
            text-align: center;
            width: 100px;
            display: inline-block;
            font-size: 16px;
            background-color: lightcoral;
            color: #ffffff;
            border: none;
            text-decoration: none;
            border-radius: 10px
        }

        h1 {
            text-align: center;
            color: #587D87;
        }
    </style>
}
