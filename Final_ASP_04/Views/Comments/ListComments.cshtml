@using Final_ASP_04.Models.EFModels;
@using Final_ASP_04.Models.ViewModels;
@model List<CommentListVm>
@foreach (var comment in Model)
{
    <div class="col-lg-3 col-md-6 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body d-flex flex-column">
                <div>
                    <p>
                        @for (int i = 0; i < comment.Rank; i++)
                        {
                            <img src="~/images/rankicon.png" alt="rankicon" />
                        }
                    </p>
                    <p>
                        @comment.Description
                    </p>
                </div>               
                <div class="mt-auto">
                    <p class="text-muted">
                        @comment.CreatedTime.ToString("yyyy-MM-dd")
                    </p>
                </div>
            </div>
        </div>
     </div>
}


