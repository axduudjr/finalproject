
@{
    ViewBag.Title = "Mail";
}
<!--內容 begin-->
<div class="container-fluid jumbotron" style="margin-top:55px;">

</div>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <form action="@Url.Action("Mail")" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input class="form-control Name" id="floatingInputname" name="Name" placeholder="">
                            <label for="floatingInputname">姓名</label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input class="form-control" id="floatingInputPhoneNumber" name="PhoneNumber" placeholder="">
                            <label for="floatingInputPhoneNumber">手機</label>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="form-floating mb-3">
                        <input class="form-control Title" id="floatingInputTitle" name="Title" placeholder="">
                        <label for="floatingInputTitle" class="ps-4">主旨</label>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="form-floating mb-3">
                        <textarea class="form-control Description" style="height:150px;" id="floatingInputDescription" name="Description" placeholder=""></textarea>
                        <label for="floatingInputDescription" class="ps-4">留言內容</label>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <input type="submit" class="btn btn-primary submit" value="提交">
                    </div>
                </div>
            </form>

        </div>
        <div class="col-md-4">
            <p class="m-4">地址: Lorem ipsum dolor sit amet consectetur s.</p>
            <p class="m-4">電話: 02-12345678</p>
            <p class="m-4">傳真: 02-12345678</p>
            <p class="m-4">電子郵件:service@gmail</p>
        </div>
    </div>
</div>
<!--內容 end-->


