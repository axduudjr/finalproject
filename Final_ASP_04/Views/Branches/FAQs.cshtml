@model Final_ASP_04.Models.EFModels.FAQ

@{
    ViewBag.Title = "FAQs";
    var QAs = ViewBag.FAQs;
    var databstarget = string.Empty;
    var id = string.Empty;
}

<h2>FAQs</h2>

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="accordion" id="accordionPanelsStayOpenExample">
            @{
                foreach (var qa in QAs)
                {
                    databstarget = "#panelsStayOpen-collapse" + @qa.Id;
                    id = "panelsStayOpen-collapse" + @qa.Id;
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="@databstarget"
                                    aria-expanded="true"
                                    aria-controls="@id">
                                @qa.Question
                            </button>
                        </h2>
                        <div id="@id"
                             class="accordion-collapse collapse">
                            <div class="accordion-body">
                                @qa.Answer
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#panelsStayOpen-collapse1").addClass("show");
        });
    </script>
}