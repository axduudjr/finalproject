<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 住宿趣</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("css", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="background-color: rgb(167, 192, 199); white-space:nowrap">
        <div class="container">
            <img src="/images/icon.png" alt="" width="30" height="24" class="d-inline-block align-text-top">
            @Html.ActionLink("住宿趣後台管理系統", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="切換導覽" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("維護FAQs", "Index", "FAQs", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("維護最新消息", "Index", "News", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("維護會員", "Index", "Members", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("維護訂單", "Index", "Orders", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("維護房型", "Index", "RoomTypes", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("會員來信", "Index", "Mails", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("房間管理系統", "Index", "RoomsManage", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                        @{
                            if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item float-end">@Html.ActionLink("登出", "Logout", "Users", new { area = "" }, new { @class = "nav-link bi bi-box-arrow-right" })</li>
                            }
                            else
                            {
                                <li class="nav-item float-end">@Html.ActionLink("登入", "Login", "Users", new { area = "" }, new { @class = "nav-link bi bi-person-up" })</li>
                            }
                        }
                    </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - 住宿趣</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("js", required: false)
    @RenderSection("scripts", required: false)
</body>
</html>