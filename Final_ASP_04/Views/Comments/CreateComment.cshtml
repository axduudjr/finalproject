@model Final_ASP_04.Models.ViewModels.CommentCreateVm
@using Final_ASP_04.Models.EFModels;
@{
    ViewBag.Title = "CreateComment";
    var order = ViewBag.Order as Order;
}
<!-- 麵包屑 -->
<div class="container" style="margin-top:90px;">
    <div class="mt-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">首頁</a></li>
                <li class="breadcrumb-item"><a href="/Orders/Index">我的訂單</a></li>
                <li class="breadcrumb-item active">打分評論</li>
            </ol>
        </nav>
    </div>
</div>
<!-- 評論對象 -->
<div class="container">
    <div class="row">
        <div class="productPhoto">
            <h4 class="productText" style="padding-top: 150px;">@order.Branch.Name</h4>
            <h3 class="productText">
                @order.Room.RoomType.Name
            <small>@order.Room.GuestNumber.Name</small>
        </h3>
    </div>
</div>
</div>
<!-- 打分評論 -->
<div class="container">
    <form action="CreateComment" method="post" id="commentForm">
        <div class="row">
            <div class="col-12 comment">
                <h4 class="fw-bolder">打分評論</h4>
                <div class="container pointContainer">
                    <div class="panel">
                        <ul>
                            <li class="blank" data-value="1"><i class="fa fa-star fa-fw"></i></li>
                            <li class="hover" data-value="2"><i class="fa fa-star fa-fw"></i></li>
                            <li class="active hover" data-value="3"><i class="fa fa-star fa-fw"></i></li>
                            <li data-value="4"><i class="fa fa-star fa-fw"></i></li>
                            <li data-value="5"><i class="fa fa-star fa-fw"></i></li>
                        </ul>
                        <div class="tip">請點選分數</div>
                        <div class="result">一般般</div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div>
                        <div>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="20" name="Description" placeholder="我們的服務品質、環境、態度如何呢?跟大家分享你的住宿體驗!"></textarea>
                        </div>
                        <input type="hidden" id="orderIdInput" name="OrderId" value="@order.Id">
                        <input type="hidden" id="rankInput" name="Rank" value="0">
                        <div class="customBtn">
                            <button type="submit" class="btn btn-success btn-lg" id="submitComment">送出評論</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section css{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .productPhoto {
            background-image: url(/images/RoomType1.jpg);
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            border-radius: 10px;
            height: 400px;
            position: relative;
        }

            .productPhoto::before {
                content: "";
                display: block;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                border-radius: 10px;
                position: absolute;
                top: 0;
                bottom: 0;
                left: 0;
                right: 0;
            }

        .productText {
            color: white;
            font-size: 30px;
            font-weight: bold;
            text-align: center;
            position: relative;
        }

        .comment {
            margin-top: 10px;
            padding: 10px;
            border: 1px solid #cccaca;
            border-radius: 10px;
            box-shadow: 0 0 10px #a8a7a7;
        }

        .pointContainer {
            width: 100%;
            max-width: 600px;
            margin-top: 10px;
            /* border:1px solid #ccc; */
        }

        .customBtn {
            margin-top: 15px;
            text-align: center;
        }

        .panel {
            border: 1px solid #ccc;
            border-radius: 10px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            font-size: 1.2rem;
        }

            .panel ul {
                display: flex;
                justify-content: center;
                padding: 0;
                margin: 0;
                list-style: none;
            }

            .panel li {
                cursor: pointer;
            }

                /*請注意, 這三個css 撰寫順序不能亂調整, active最後寫,所以會覆蓋前面二個*/
                .panel li.blank {
                    color: #ccc;
                }

                .panel li.hover {
                    color: #ff0;
                }

                .panel li.active {
                    color: #f90;
                }

        .tip, .result {
            margin-top: 10px;
            font-size: 1.2rem;
        }
    </style>
}

